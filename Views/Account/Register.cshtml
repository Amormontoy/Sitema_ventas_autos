    <div class="form-group">
        Nombre de usuario: <input class="form-control" asp-for="Usuario">
    </div>

    <div class="form-group">
        Email: <input class="form-control" asp-for="Email">
    </div>

    <div class="form-group">
        Password: <input class="form-control" asp-for="Password">
    </div>

    <div class="form-group">
        Confirmar contrase√±a: <input class="form-control" asp-for="PasswordConfirmacion">
    </div>

